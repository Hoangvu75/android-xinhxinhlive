<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/darkThree">

    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCategoryImage"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_socical_fb"
            android:background="@drawable/border_field"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category name"
            android:fontFamily="@font/roboto_medium"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white" />
        <View
            android:id="@+id/vCategoryHighlight"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/watermelon"
            android:visibility="invisible"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>