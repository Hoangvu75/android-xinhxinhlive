<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgr_bottom_sheet_dialog_corner"
    android:orientation="vertical"
    android:layout_gravity="bottom">

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingStart="17dp"
        android:paddingBottom="16dp"
        android:paddingEnd="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chia sẻ với bạn bè và gia đình"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium" />

        <TextView
            android:id="@+id/tvCloseButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_baseline_close_24"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blueyGrey"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civFacebookShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_facebook_new_contact_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civInstagramShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_insta_new_contact_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civMessengerShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/messenger_button_blue_bg_round"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messenger"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civViberShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_viber"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viber"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civZaloShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_zalo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zalo"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civOtherShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_othershare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khác"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bgr_border_6_corner"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_margin="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sao chép liên kết"
            android:textColor="#E7E7E7"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:layout_marginEnd="18dp"
            android:id="@+id/tvCopyButton"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_copy"/>

    </LinearLayout>

</LinearLayout>