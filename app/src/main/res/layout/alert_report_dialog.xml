<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="182dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/darkThree">

    <LinearLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Báo cáo"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="34dp"
            android:layout_marginHorizontal="43dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc chắn muốn gửi báo cáo bài livestream này?"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blueyGrey"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDeclineReport"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Bỏ qua"
                android:textSize="13dp"
                android:textColor="@color/watermelon"
                android:gravity="center" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blueyGrey" />

            <TextView
                android:id="@+id/tvAcceptReport"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Đồng ý"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@color/watermelon"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>