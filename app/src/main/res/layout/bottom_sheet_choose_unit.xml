<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn đơn vị tính"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <RadioGroup
        android:id="@+id/rgGroupOfCategories"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbBtn0"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Phần"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
        <RadioButton
            android:id="@+id/rbBtn1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Đôi"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
        <RadioButton
            android:id="@+id/rbBtn2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Túi"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
        <RadioButton
            android:id="@+id/rbBtn3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Chiếc"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
        <RadioButton
            android:id="@+id/rbBtn4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Thùng"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
        <RadioButton
            android:id="@+id/rbBtn5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Cái"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFinishButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/watermelon"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        android:visibility="gone">
        <TextView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Hoàn tất"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>