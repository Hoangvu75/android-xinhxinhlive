<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgr_bottom_sheet_dialog_corner"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingStart="17dp"
        android:paddingBottom="16dp"
        android:paddingEnd="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|start">

        <TextView
            android:gravity="center|start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Báo cáo"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCloseButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_baseline_close_24"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blueyGrey"/>

    <LinearLayout
        android:id="@+id/llReportLiveContent"
        android:paddingTop="25dp"
        android:paddingStart="17dp"
        android:paddingBottom="25dp"
        android:paddingEnd="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Báo cáo nội dung livestream"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_small" />

    </LinearLayout>

    <View
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blueyGrey"/>

    <LinearLayout
        android:id="@+id/llBlockUser"
        android:paddingTop="25dp"
        android:paddingStart="17dp"
        android:paddingBottom="25dp"
        android:paddingEnd="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chặn người dùng"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>